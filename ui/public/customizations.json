{
    "forms": {
        "databases/{organization}/{project}/{database}": [
            {
                "label": "Start Database",
                "patch": [
                    {
                        "op": "replace",
                        "path": "/maintenance/disabled",
                        "value": false
                    }
                ],
                "hidden": "${maintenance.disabled} == false",
                "confirm": "Do you want to start Database ${name}?",
                "afterColumn": "status"
            },
            {
                "label": "Stop Database",
                "patch": [
                    {
                        "op": "replace",
                        "path": "/maintenance/disabled",
                        "value": true
                    }
                ],
                "hidden": "${maintenance.disabled} == true",
                "confirm": "Do you want to stop Database ${name}?",
                "afterColumn": "status"
            }
        ]
    },
    "views": [
        "databases": {
            "status": "(${status.ready} ? \"Ready\" : \"Not Ready\") + \" - \" + ${status.state}"
        },
        "databases/{organization}": {
            "organization": null,
            "status": "(${status.ready} ? \"Ready\" : \"Not Ready\") + \" - \" + ${status.state}"
        },
        "databases/{organization}/{project}": {
            "organization": null,
            "project": null,
            "status": "(${status.ready} ? \"Ready\" : \"Not Ready\") + \" - \" + ${status.state}"
        }
    ]
}